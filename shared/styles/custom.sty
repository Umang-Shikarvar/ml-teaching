% ==============================================================================
% URL PROCESSING
% ==============================================================================

\newcommand{\lastpartofurl}[1]{%
  \edef\temp{\expandafter\lastpartofurlA#1/\relax}%
  \expandafter\lastpartofurlB\temp\relax%
}
\def\lastpartofurlA#1/#2\relax{#2}
\def\lastpartofurlB#1/#2\relax{%
  \if\relax#2\relax
    #1%
  \else
    \lastpartofurlB#2\relax%
  \fi
}

